#!groovy

@Library("Infrastructure")

def type = "nodejs"
def product = "wa"
def component = "task-batch-service"

def yarnBuilder = new uk.gov.hmcts.contino.YarnBuilder(this)

def secrets = [
  'wa-${env}': [
    secret('s2s-secret-task-monitor', 'S2S_SECRET_TASK_MONITOR'),
  ]
]

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
  [$class     : 'AzureKeyVaultSecret',
   secretType : 'Secret',
   name       : secretName,
   version    : '',
   envVariable: envVar
  ]
}

withPipeline(type, product, component) {
  disableLegacyDeployment()
  nonServiceApp()
  loadVaultSecrets(secrets)

  afterSuccess('build') {
    yarnBuilder.yarn('build')
    sh "yarn test"
    echo "yarn test complete"
    sh "yarn test:smoke"
    echo "Smoke test complete"
    sh "yarn test:functional"
    echo "Functional test complete"
  }

  onPR {
//    loadVaultSecrets(secrets)
    env.S2S_URL = "http://rpe-service-auth-provider-aat.service.core-compute-aat.internal"
    env.WA_TASK_MONITOR_SERVICE_URL = "http://wa-task-monitor-aat.service.core-compute-aat.internal"
    env.S2S_MICROSERVICE_NAME_TASK_MONITOR = "wa_task_monitor"
//    env.S2S_SECRET_TASK_MONITOR = "${{ secrets.S2S_SECRET_TASK_MONITOR }}"
  }
}
